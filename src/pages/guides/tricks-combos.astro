---
import Layout from '../../components/Layout.astro';
import { Zap, Star, TrendingUp, Target } from 'lucide-astro';
import tricksData from '../../data/tricks.json';

const { airTricks, grindTricks, manualTricks, specialTricks } = tricksData;
