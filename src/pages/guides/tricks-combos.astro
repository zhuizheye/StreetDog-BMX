<Layout 
  title="Tricks & Combos Guide"
  description="Complete tricks and combos guide for Streetdog BMX - Master air tricks, grinds, manuals, and build high-scoring combinations."
  keywords={['streetdog bmx tricks', 'streetdog bmx combos', 'bmx tricks list', 'how to combo streetdog bmx']}
>
  <div class="container mx-auto px-4 py-16">
    <!-- Header -->
    <div class="mb-12">
      <div class="breadcrumbs text-sm mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/guides/">Guides</a></li>
          <li>Tricks & Combos</li>
        </ul>
      </div>
      
      <h1 class="text-5xl font-bold mb-4">
        Tricks & <span class="text-primary">Combos</span> Guide
      </h1>
      <p class="text-xl opacity-80">
        Master every trick and learn to chain them into massive combos
      </p>
    </div>
    
    <div class="prose-custom max-w-none">
      <!-- Air Tricks -->
      <section class="mb-12">
